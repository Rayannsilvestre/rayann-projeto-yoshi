<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Entrada para brinquedos do parque"
        android:id="@+id/tv_titulo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_nome"
        android:hint="digite seu nome"
        android:textSize="24sp"
        android:inputType="text"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_idade"
        android:hint=" Informe sua idade"
        android:textSize="24sp"
        android:inputType="text"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_nome"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_altura"
        android:hint=" Informe sua altura"
        android:textSize="24sp"
        android:inputType="text"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_idade"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ex: 1.65"
        android:id="@+id/tv_descricaoAltura"
        app:layout_constraintTop_toBottomOf="@+id/et_altura"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_funcao"
        android:text="Verificar entrada!"
        android:textSize="24sp"
        android:onClick="enviar"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_descricaoAltura"
        tools:layout_editor_absoluteX="8dp" />
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_resultado"
        android:text=""
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_funcao"
        />


</androidx.constraintlayout.widget.ConstraintLayout>